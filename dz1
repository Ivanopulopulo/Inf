#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>
#include <conio.h>

int main()
{
	int a = 0;
	char ch1[256], ch2[256];
	FILE *f1;
	FILE *f2;

	setlocale(LC_ALL, "Russian");

	if ((f1 = fopen("f1.txt", "r")) == NULL)
	{
		printf("Error!\n");	
		system("pause");
		return 1;
	}

	if ((f2 = fopen("f2.txt", "r")) == NULL)
	{
		printf("Error!\n");	
		system("pause");
		return 1;
	}


	while (!feof(f1) && !feof(f2))
	{
		fgets(ch1, 256, f1);
		fgets(ch2, 256, f2);
		a++;
		if (strcmp(ch1, ch2))
			printf("\n Строка №%d в файлах различается\n", a);
	}
	system("pause");
	fclose(f1);
	fclose(f2);
	return 0;
}
